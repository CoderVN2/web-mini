extends ../../layouts/defaut.pug
include ../../mixins/filterstatus.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug
include ../../mixins/form-changmutil.pug
include ../../mixins/alert.pug
block main
  .container.mt-5
    .row
      //- Ảnh sản phẩm bên trái
      .col-md-6
        if product.thumbnail
          img.img-fluid.rounded(src='/' + product.thumbnail, alt=product.title,
            style="max-width:100%; max-height:250px; object-fit:contain;")
        else
          img.img-fluid.rounded(src='/images/default.jpg', alt='No image')

      //- Thông tin sản phẩm bên phải
      .col-md-6
        //- Tiêu đề
        if product.title
          h2.mb-3 #{product.title}

        //- Mô tả
        if product.description
          p.text-muted.mb-3 #{product.description}

        hr

        //- Giá
        if typeof product.price !== 'undefined'
          p.mb-2
            strong Giá: 
            span.text-primary.ml-2 $#{product.price}

        //- Giảm giá
        if typeof product.discountPercentage !== 'undefined'
          p.mb-2
            strong Giảm giá: 
            span.text-success.ml-2 #{product.discountPercentage}%

        //- Tồn kho
        if typeof product.stock !== 'undefined'
          p.mb-2
            strong Tồn kho: 
            span #{product.stock} sản phẩm

        //- Trạng thái
        if product.status
          p.mb-2
            strong Trạng thái: 
            if product.status === 'active'
              span.badge.bg-success.ml-2 Hoạt động
            else
              span.badge.bg-danger.ml-2 Ngừng hoạt động

        //- Vị trí
        if typeof product.position !== 'undefined'
          p.mb-3
            strong Vị trí: 
            span #{product.position}

        hr

        a.btn.btn-warning.btn-sm.mr-2(href=`/admin/products/edit/${product.id}`) Sửa
        a.btn.btn-secondary(href="/admin/products") Quay lại
